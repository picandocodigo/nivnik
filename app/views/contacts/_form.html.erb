<%= form_for :contact, url: contacts_path, html: {id: "contacts"} do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: "half" %>
  <%= f.text_field :surname, placeholder: "Surname", class: "half" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.text_field :phone_number, placeholder: "Phone Number" %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.text_field :notes, placeholder: "Notes" %>
<% end %>
