<% content_for :navigation do %>
  <%= link_to '<i class="fa fa-chevron-circle-left fa-lg"></i>'.html_safe,
  contacts_path, class: "nav-button pull-left" %>
  <label>Contact</label>
  <%= link_to '<i class="fa fa-pencil fa-lg"></i>'.html_safe,
      edit_contact_path, class: "nav-button pull-right" %>
<% end %>

<section class="tag-info">
  <%= @contact.name %> <%= @contact.surname %>
  <br>
  <span>
    <%= @contact.description %>
  </span>
</section>
<section class="contact-info">
  <a href="#" class="phone-number">
    <%= @contact.phone_number %>
    <span class="pull-right">Call</span>
  </div>
  <a href="#" class="email">
    <%= @contact.email %>
    <span class="pull-right">Email</span>
  </a>
</section>
<section class="notes">
  <%= @contact.notes %>
</section>
